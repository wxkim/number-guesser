{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run All",
            "type": "shell",
            "dependsOn": [
                "Clean",
                "CMake Configure",
                "CMake Build",
                "Flash",
                "Probe"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Runs Clean, Configure, and Build in sequence"
        },
        {
            "label": "Probe",
            "type": "shell",
            "command": "st-info",
            "args": [
                "--probe"
            ],
            "problemMatcher": [],
            "detail": "List all STLink interfaces and execute"
        },
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-G",
                "Unix Makefiles",
                "-DCMAKE_TOOLCHAIN_FILE=${workspaceFolder}/cmake/gcc-arm-none-eabi.cmake",
                "-DCMAKE_C_COMPILER=/opt/homebrew/bin/arm-none-eabi-gcc",
                "-DCMAKE_CXX_COMPILER=/opt/homebrew/bin/arm-none-eabi-g++",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Configure CMake for the project"
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--parallel",
                "10"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Build the firmware using all available CPU cores"
        },
        {
            "label": "Flash",
            "type": "shell",
            "command": "st-flash",
            "args": [
                "write",
                "${workspaceFolder}/build/number-guesser.bin",
                "0x08000000"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Flash the compiled firmware onto the STM32"
        },
        {
            "label": "Erase Flash",
            "type": "shell",
            "command": "st-flash",
            "args": [
                "erase"
            ],
            "detail": "Erase the STM32 flash memory before flashing new firmware"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/build"
            ],
            "group": "build",
            "detail": "Remove all CMake build files"
        }
    ]
}